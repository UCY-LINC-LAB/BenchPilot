FROM ubuntu:20.04

# install java (for any architecture)
RUN apt-get update \
    && apt-get -y install openjdk-8-jdk \
    && rm -rf /var/lib/apt/lists/*

RUN export JAVA_HOME=/usr/lib/jvm/`ls -l /usr/lib/jvm | grep '^d' | grep java-8-openjdk | cut -d ' ' -f 10`
ENV PATH $JAVA_HOME/bin:$PATH

RUN apt-get update
RUN apt-get install -y wget
COPY stream-bench.sh ./stream-bench.sh
RUN chmod +x stream-bench.sh
RUN ./stream-bench.sh SETUP